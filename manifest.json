{
  "manifest_version": 3,
  "name": "Select Proxy",
  "version": "1.1.0",
  "description": "Выборочный прокси: только указанные домены/IP-адреса проходят через прокси",

  "permissions": ["proxy", "storage", "notifications"],

  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "24": "icons/24.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png"
  },

  "host_permissions": ["<all_urls>"],

  "web_accessible_resources": [
    {
      "resources": [
        "icons/24.png",
        "icons/32.png",
        "icons/48.png",
        "icons/64.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
