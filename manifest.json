{
  "manifest_version": 3,
  "name": "Select Proxy",
  "version": "1.2.0",
  "description": "Выборочный прокси: только указанные домены/IP-адреса проходят через прокси",

  "permissions": [
    "proxy",
    "storage",
    "notifications",
    "tabs",
    "webNavigation"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "24": "icons/24.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "icons/24.png",
        "icons/32.png",
        "icons/48.png",
        "icons/64.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
